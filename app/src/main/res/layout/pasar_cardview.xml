<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
       app:contentPadding="5dp"
        android:layout_width="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <de.hdodenhof.circleimageview.CircleImageView
            android:src="@drawable/store_outline"
            android:id="@+id/pasarimage"
            android:layout_width="200px"
            android:layout_height="200px"/>

            <TextView
                android:id="@+id/pasarjudul"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@id/pasarimage"
                android:fontFamily="@font/poppins_bold"
                android:text="Title"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/pasardeskripsi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/pasarjudul"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@id/pasarimage"
                android:fontFamily="@font/poppins"
                android:text="@string/lorem"
                android:maxLines="2"
                android:textSize="20dp" />
            <Button
                android:id="@+id/pasardetail"
                android:textSize="15dp"
                android:layout_width="150dp"
                android:layout_marginTop="10dp"
                android:padding="3dp"
                android:layout_height="45dp"
                android:layout_below="@id/pasardeskripsi"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:background="@drawable/bg_button"
                android:text="Detail"
                />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>