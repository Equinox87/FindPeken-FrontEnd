<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pasar_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/user_profile_photo"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:src="@drawable/person"
            android:layout_below="@+id/header_cover_image"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dp"
            android:elevation="5dp"
            />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="-40dp"
            android:background="#fff"
            android:elevation="4dp"
            app:cardCornerRadius="10dp"
            android:orientation="vertical"
            android:padding="20dp">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="30dp">

                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ABOUT ME"
                    android:textSize="18dp"
                    android:fontFamily="@font/poppins_bold"
                    android:gravity="center"
                    />

                <TextView
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="I GEDE RAMA WAHYUDANA"
                    android:textSize="16dp"
                    android:fontFamily="@font/poppins_bold"
                    android:gravity="center"
                    />

                <TextView
                    android:layout_marginTop="1dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="(200030746)"
                    android:textSize="16dp"
                    android:fontFamily="@font/poppins_bold"
                    android:gravity="center"
                    />

                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="I MADE SUARDIKA"
                    android:textSize="16dp"
                    android:fontFamily="@font/poppins_bold"
                    android:gravity="center"
                    />

                <TextView
                    android:layout_marginTop="1dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="(200030747)"
                    android:textSize="16dp"
                    android:fontFamily="@font/poppins_bold"
                    android:gravity="center"
                    />

                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="I WAYAN BAYU SULAKSANA "
                    android:textSize="16dp"
                    android:fontFamily="@font/poppins_bold"
                    android:gravity="center"
                    />

                <TextView
                    android:layout_marginTop="1dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="(200030817)"
                    android:textSize="16dp"
                    android:fontFamily="@font/poppins_bold"
                    android:gravity="center"
                    />

                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="I WAYAN EKA WAHYU DARMALAKSANA "
                    android:textSize="16dp"
                    android:fontFamily="@font/poppins_bold"
                    android:gravity="center"
                    />

                <TextView
                    android:layout_marginTop="1dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="(200030818)"
                    android:textSize="16dp"
                    android:paddingBottom="10dp"
                    android:fontFamily="@font/poppins_bold"
                    android:gravity="center"
                    />




            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </LinearLayout>
</LinearLayout>




